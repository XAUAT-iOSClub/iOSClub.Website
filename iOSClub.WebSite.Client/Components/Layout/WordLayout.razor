@layout HomeLayout
@inherits LayoutComponentBase


<GridRow>
    <GridCol Md="6" Lg="6" Xl="4" Xxl="4"
             class="desktop-phone">
        <Affix>
            <div style="overflow: auto;max-height: 100vh">
                @Menu
            </div>
        </Affix>
    </GridCol>
    <GridCol Xs="24" Sm="24" Md="18" Lg="18" Xl="20" Xxl="20"
             Style="padding: 20px;min-height: 100vh;">
        <Button Type="@ButtonType.Text" Class="phone-desktop" OnClick="() => _drawerVisible = !_drawerVisible">
            <Icon Type="menu" Theme="outline"/>
            <span style="margin-left: 10px">导航</span>
        </Button>
        @if (_drawerVisible)
        {
            @Menu
        }
        else
        {
            @Body
        }
        <BackTop Style="margin-bottom:60px">
            <div class="ant-back-top-inner">
                <Icon Type="arrow-up" Theme="outline"/>
            </div>
        </BackTop>
    </GridCol>
</GridRow>

@code
{
    private bool _drawerVisible;
    private void Close() => _drawerVisible = false;

    private RenderFragment Menu =>
        @<Template>
            <Menu Theme="MenuTheme.Light"
                  OnMenuItemClicked="Close"
                  Style="padding-top: 10px;animation: fade-in ease-in 0.3s;"
                  Mode="MenuMode.Inline" Class="menu-block">
                <MenuItemGroup Class="group-block">
                    <TitleTemplate>
                        <div class="group-title">
                            社团简介
                        </div>
                    </TitleTemplate>
                    <ChildContent>
                        <MenuItem RouterLink="/About" RouterMatch="NavLinkMatch.All">关于我们</MenuItem>
                        <MenuItem RouterLink="/Structure" RouterMatch="NavLinkMatch.All">社团结构</MenuItem>
                        <MenuItem RouterLink="/OtherOrg" RouterMatch="NavLinkMatch.All">其他组织</MenuItem>
                    </ChildContent>
                </MenuItemGroup>
                <MenuItemGroup Class="group-block">
                    <TitleTemplate>
                        <div class="group-title">
                            竟赛资源
                        </div>
                    </TitleTemplate>
                    <ChildContent>
                        <MenuItem RouterLink="/Article/Competitions" RouterMatch="NavLinkMatch.All">资源支持</MenuItem>
                        <MenuItem RouterLink="/Article/MobileApplication" RouterMatch="NavLinkMatch.All">移动应用创新赛</MenuItem>
                        <MenuItem RouterLink="/Article/Swift" RouterMatch="NavLinkMatch.All">WWDC-Swift学生挑战赛</MenuItem>
                    </ChildContent>
                </MenuItemGroup>
                <MenuItemGroup Class="group-block">
                    <TitleTemplate>
                        <div class="group-title">
                            社团活动
                        </div>
                    </TitleTemplate>
                    <ChildContent>
                        <MenuItem RouterLink="/Article/VisionPro" RouterMatch="NavLinkMatch.All">体验最新产品</MenuItem>
                        <MenuItem RouterLink="/Article/PressConference" RouterMatch="NavLinkMatch.All">一起看发布会</MenuItem>
                    </ChildContent>
                </MenuItemGroup>
                <MenuItemGroup Class="group-block">
                    <TitleTemplate>
                        <div class="group-title">
                            社团历史
                        </div>
                    </TitleTemplate>
                    <ChildContent>
                        <MenuItem RouterLink="/Article/History-Overview" RouterMatch="NavLinkMatch.All">总述</MenuItem>
                        <MenuItem RouterLink="/Article/History-Founding" RouterMatch="NavLinkMatch.All">创社史</MenuItem>
                        <MenuItem RouterLink="/Article/History-Shao Han's Reign" RouterMatch="NavLinkMatch.All">邵韩之治</MenuItem>
                    </ChildContent>
                </MenuItemGroup>
            </Menu>
        </Template>;
}

<style>
    
    .group-block{
        padding: 10px;
    }
    
    .menu-block{
        padding-top: 20px;
        padding-left: 10px;
        padding-bottom: 20px;
    }

    .group-title {
        padding-bottom: 10px;
        border-bottom: 1px solid #ededed;
    }
    
    .ant-back-top-inner {
        height: 40px;
        width: 40px;
        line-height: 40px;
        border-radius: 20px;
        background-color: #1088e9;
        color: #fff;
        text-align: center;
        font-size: 20px;
    }

    h1, h2, h3, h4, h5, h6 {
        font-weight: bold;
    }
    
    h1{
        font-size: 24px;
    }
    
    h2{
        font-size: 22px;
    }
    
    h3{
        font-size: 20px;
    }
    
    h4{
        font-size: 18px;
    }
    
    h5,h6{
        font-size: 16px;
    }

    .footer{
        display: none;
    }

    @@media screen and (max-width: 768px) {
        .footer {
            display: block !important;
        }
    }
</style>