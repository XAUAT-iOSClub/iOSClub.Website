@layout CentreLayout
@using iOSClub.WebSite.Models
@inherits LayoutComponentBase

<Layout Style="max-height: 100%;overflow:hidden">
    <Sider Breakpoint="@BreakpointType.Md" Class="desktop-phone sider"
           CollapsedWidth="64" Trigger="@null">
        <CentreMenu State="@Member.Identity"/>
    </Sider>
    <Content Class="layout-context">
        @Body
    </Content>
</Layout>

@code
{
    [CascadingParameter] private MemberModel Member { get; set; } = new();
}

<style>
    .sider {
        background-color: #f3f5f7;
        overflow: auto;
        height: 100%;
    }

    body {
        height: 100% !important;
    }

    .layout-context {
        overflow: auto;
        background-color: #f3f5f7;
        margin: 24px 16px 0;
    }
    
    @@media screen and (max-width: 768px) {
        .layout-context {
            margin: 0;
        }
    }

    .ant-modal-header {
        border-radius: 12px 12px 0 0;
    }
    
    .ant-modal-body {
        border-radius: 0 0 12px 12px;
    }
    
    .ant-modal-content {
        border-radius: 12px !important;
    }
</style>